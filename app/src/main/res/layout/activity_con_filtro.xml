<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDestino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Destino"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/lblCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura:"
        android:layout_below="@id/textViewDestino"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- °C"
        android:layout_toEndOf="@id/lblCurrent"
        android:layout_alignBaseline="@id/lblCurrent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/lblCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condición:"
        android:layout_below="@id/lblCurrent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_toEndOf="@id/lblCondition"
        android:layout_alignBaseline="@id/lblCondition"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/buttonAddToFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar a Favoritos"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
